
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SportclubManager.Models.ReportModel

<div class="container" align="center">
    @using (Html.BeginForm("Show", "Report", FormMethod.Post, new
    {
        @class = "form-login",
        @role = "form"
    }))
    {
        <h2>Report</h2>
        <p></p>

        <div class="container" align="left">
            <span>Group</span>
            @Html.DropDownList("GroupID", Model.GroupList, new {@class = "form-control"})
            @Html.ValidationMessage("GroupID")
            <p></p>

            <span>Date from</span>
            <div class="controls">
                @Html.DropDownList("DateFromDay", Model.DateFromDaySelectList, new {@class = "select-day"})
                @Html.DropDownList("DateFromMonth", Model.DateFromMonthSelectList, new {@class = "select-month"})
                @Html.DropDownList("DateFromYear", Model.DateFromYearSelectList, new {@class = "select-year"})
            </div>
            <p></p>

            <span>Date to</span>
            <div class="controls">
                @Html.DropDownList("DateToDay", Model.DateToDaySelectList, new {@class = "select-day"})
                @Html.DropDownList("DateToMonth", Model.DateToMonthSelectList, new {@class = "select-month"})
                @Html.DropDownList("DateToYear", Model.DateToYearSelectList, new {@class = "select-year"})
            </div>
            <p></p>
        </div>

        <div class="row" align="center">
            <div class="col-md-7">
                <button type="submit" class="btn btn-lg btn-primary">
                    Download
                </button>
            </div>
            <div class="col-md-5">
                @Html.ActionLink("Home", "Home", "Home", null, new {@class = "btn btn-info btn-lg"})
            </div>
        </div>
    }
</div>
