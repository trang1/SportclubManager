
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" align="center">
    <h2 class="h2">Please select the section you are interested in.</h2>
    <p></p>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-2" align="center">
            @Html.ActionLink("User info", "Info", "User", null, new {@class = "btn btn-primary btn-lg"})
        </div>
        <div class="col-md-2" align="center">
            @Html.ActionLink("Members", "Index", "Member", null, new { @class = "btn btn-success btn-lg" })
        </div>
        <div class="col-md-4"></div>
    </div>
    <p></p>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-2" align="center">
            @Html.ActionLink("Documents", "Index", "Document", null, new {@class = "btn btn-info btn-lg"})
        </div>
        <div class="col-md-2" align="center">
            <button class="btn btn-primary btn-lg">
                Evidence
            </button>
        </div>
        <div class="col-md-2" align="center">
            <button class="btn btn-info btn-lg">
                Report
            </button>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

